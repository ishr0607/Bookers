

<%= form_for :book, url: {action: :create} do |f| %>

	<% if book.errors.any? %>
		<p><%= book.errors.count %> error prohibited this book from being saved:</p>
		<ul>
			<% book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %>

<% end %>