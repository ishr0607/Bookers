<h1 class="title">Books</h1>

<div class="content">
	<table border=0>
	<tr>
		<th>title</th>
		<th>Body</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "Show", book_path(book.id) %>
				<%= link_to "Edit", edit_book_path(book.id) %>
				<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		</tr>
	<% end %>

	</table>
</div>

<h3>New book</h3>
<%= render 'new', book: @book %>